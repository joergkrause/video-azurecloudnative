{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "defaultValue": "stworkshopdev",
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the storage account"
      }
    },
    "storageAccountSku": {
      "defaultValue": "Standard_LRS",
      "type": "array",
      "value": [
        "Standard_LRS",
        "Standard_GRS"
      ],
      "metadata": {
        "description": "Redundancy (hint: keep locally redundant (LRS))"
      }
    },
    "storageAccountTier": {
      "defaultValue": "Standard",
      "type": "string",
      "metadata": {
        "description": "Tier (default: Standard)"
      }
    },
    "AppPlanName": {
      "defaultValue": "appplan-workshop-dev",
      "type": "String",
      "metadata": {
        "description": "Name of the application plan (host for service and functions)"
      }
    },
    "AppPlanSku": {
      "defaultValue": "B1",
      "type": "String",
      "metadata": {
        "description": "SKU of the plan (recommendation: Basic B1)"
      }
    },
    "FunctionMachinesimulatorName": {
      "defaultValue": "func-machinesimulator-dev",
      "type": "String"
    }
  },
  "variables": {
    "linked-template-storage": "https://raw.githubusercontent.com%2Fjoergkrause%2Fvideo-azurecloudnative%2Fmaster%2FARMTemplates%2Fstorage.json",
    "linked-template-appplan": "https://raw.githubusercontent.com%2Fjoergkrause%2Fvideo-azurecloudnative%2Fmaster%2FARMTemplates%2Fappplan.json",
    "linked-template-functionapp": "https://raw.githubusercontent.com%2Fjoergkrause%2Fvideo-azurecloudnative%2Fmaster%2FARMTemplates%2Ffunctionapp.json"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "linkedTemplate",
      "properties": {
        "mode": "Incremental",
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "storageAccountSku": {
            "value": "[parameters('storageAccountSku')]"
          },
          "storageAccountTier": {
            "value": "[parameters('storageAccountTier')]"
          }
        },
        "templateLink": {
          "uri": "[variables('linked-template-storage')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "linkedTemplate",
      "properties": {
        "mode": "Incremental",
        "parameters": {
          "AppPlanName": {
            "value": "[parameters('AppPlanName')]"
          },
          "AppPlanSku": {
            "value": "[parameters('AppPlanSku')]"
          }
        },
        "templateLink": {
          "uri": "[variables('linked-template-appplan')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "linkedTemplate",
      "properties": {
        "mode": "Incremental",
        "parameters": {
          "FunctionMachinesimulatorName": {
            "value": "[parameters('FunctionMachinesimulatorName')]"
          }
        },
        "templateLink": {
          "uri": "[variables('linked-template-functionapp')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
    "stringOutput": {
      "type": "string",
      "value": "[deployment().name]"
    }
  }
}